<%- include('./shared/headers.ejs') %>

    <body id="login">
        <div class="overlay">

            <!-- ======================Registration form================================= -->
            <div class="container pt-5">
                <div class="row">
                    <div class="col-md-7 m-auto p-5">
                        <div class="form p-5 ">
                            <h2 class="text-center text-white">Registration</h2>
                            <form action="handelRegister" method="post">
                                <div class="row mt-3">
                                    <div class="col">
                                        <input value="<%=oldDATA.length==0?'':oldDATA[0].Fname%>" name="Fname"
                                            type="text" class="form-control inp pt-3" placeholder="First Name">
                                        <% if (errors.find(e=>e.param == 'Fname')) { %>
                                            <div class="alert alert-danger text-center">
                                                invalid name
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="col">
                                        <input value="<%=oldDATA.length==0?'':oldDATA[0].Lname%>" name="Lname"
                                            type="text" class="form-control inp pt-3" placeholder="Last Name">
                                        <% if (errors.find(e=>e.param == 'Lname')) { %>
                                            <div class="alert alert-danger text-center">
                                                invalid name
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                                <input value="<%=oldDATA.length==0?'':oldDATA[0].Username%>" name="Username" type="text"
                                    class="form-control inp pt-3" placeholder="Username">
                                <% if (errors.find(e=>e.param == 'Username')) { %>
                                    <div class="alert alert-danger text-center">
                                        invalid username
                                    </div>
                                    <% } %>
                                        <input value="<%=oldDATA.length==0?'':oldDATA[0].Email%>" name="Email"
                                            type="email" class="form-control inp pt-3" placeholder="Email">
                                        <% if (errors.find(e=>e.param == 'Email')) { %>
                                            <div class="alert alert-danger text-center">
                                                invalid Email
                                            </div>
                                            <% } %>
                                                <input value="<%=oldDATA.length==0?'':oldDATA[0].Password%>"
                                                    name="Password" type="password" class="form-control inp pt-3 mb-3"
                                                    placeholder="Password">
                                                <% if (errors.find(e=>e.param == 'Password')) { %>
                                                    <div class="alert alert-danger text-center">
                                                        invalid password
                                                    </div>
                                                    <% } %>
                                                        <% if (emailExist.length !=0) { %>
                                                            <div class="alert alert-danger text-center">
                                                                email doesn't exist
                                                            </div>
                                                            <% } %>
                                                            <% if (success.length !=0) { %>
                                                                <div class="alert alert-success text-center">
                                                                    success, you can <a href="/" >Sign in</a>
                                                                </div>
                                                            <% } %>
                                                                <button type="submit "
                                                                    class="btn btn-outline-info text-white w-100">Sign
                                                                    Up</button>
                                                                <p class="text-center pb-3"> <a href="/"
                                                                        class="text-white mt-3 d-block">Sign In
                                                                        Here</a>
                                                                </p>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <%- include('./shared/footer.ejs') %>